---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  {% for page in site.pages %}
    {% unless page.url contains 'assets' or page.url contains '.css' or page.url contains '.js' or page.url contains '.xml' or page.url contains '.txt' or page.url contains '404' %}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{% if page.last_modified_at %}{{ page.last_modified_at | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>{% if page.url == '/' %}1.0{% else %}0.5{% endif %}</priority>
      </url>
    {% endunless %}
  {% endfor %}

  {% for review in site.reviews %}
    {% unless review.pending == true %}
      <url>
        <loc>{{ site.url }}{{ review.url }}</loc>
        <lastmod>{{ review.visit_date | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
      </url>
    {% endunless %}
  {% endfor %}

</urlset>
